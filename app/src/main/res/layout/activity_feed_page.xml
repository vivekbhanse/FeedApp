<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.FeedPage">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/post"
            android:background="@drawable/et_cust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="post"
            android:inputType="textMultiLine"
            android:minLines="5"

            android:padding="8dp"
             />

        <Button
            android:id="@+id/btn_createpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Create Post" />

        <Button
            android:id="@+id/btn_viewpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="View My Post" />

        <Button
            android:id="@+id/btn_viewothePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="View Other Post" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>